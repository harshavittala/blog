
	<%= simple_form_for(@post) do |f| %>
	  <%= f.error_notification %>

	  <div class="form-inputs">
	    <%= f.input :title %>
	    <%= f.input :content, :as => :ckeditor, input_html: {:ckeditor => {:toolbar => 'FULL'}} %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit %>
	  </div>
	<% end %>
